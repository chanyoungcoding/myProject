<% layout('layouts/common.ejs') %>
<!-- showPage css && js -->
<link rel="stylesheet" href="/css/stars.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<link rel="stylesheet" href="/css/common.css">
<link rel="stylesheet" href="/css/show.css">

<%= error %>


<div class="showPage">
  <div class="showPage__top">
    <h1><%= campground.title %></h1>
    <h2>동해안에서 가장 아름답다는 장호해변 언덕에 위치한 휴양 캠핑 시설</h2>
    <div class="top__line"></div>
    <div class="top__tag">
      <li class="tag__tag">태그</li>
      <li>&#35;&#32;가족</li>
      <li>&#35;&#32;여름</li>
      <li>&#35;&#32;물놀이</li>
    </div>
  </div>

  <div class="showPage__center">
    <div class="center__left">
      <div id="carouselExample" class="carousel slide">
        <div class="carousel-inner">
          <% campground.images.forEach((img, i) => { %>
            <div class="carousel-item <%= i === 0 ? 'active' : ''%>">
              <img src="<%= img.url %>" class="showPage__img" alt="">
            </div>
          <% }) %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
    <div class="center__right">
      <h1><%= campground.title %></h1>
      <h2><%= campground.location %></h2>
      <h3><%= campground.price %></h3>
      <h3><%= campground.author.username %></h3>
      <p><%= campground.description %></p>
      <% if(currentUser && campground.author.equals(currentUser._id)) { %>
      <div class="showPage__button">
        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
          <button class="button-24" role="button">삭제하기</button>
        </form>
        <button class="button-25" role="button">
          <a href="/campgrounds/<%= campground._id %>/edit">수정하기</a>
        </button>
      </div>
      <% } %>
    </div>
  </div>

  
  <% if(currentUser) { %>
  <div class="show__right">
    <h2>리뷰를 남겨보세요.</h2>
    <form class="review__form" action="/campgrounds/<%= campground._id %>/reviews" method="POST">
      <div class="form__first">
        <label for="rating">별점</label>
        <fieldset class="starability-basic">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>
      <div class="form__second">
        <textarea name="review[body]" id="review" cols="30" rows="10" placeholder="리뷰를 남겨주세요." required></textarea>
      </div>
      <button class="button-8" role="button">제출</button>
    </form>

    <div class="review__result">
      <% for(let review of campground.reviews) {%>
        <div>
          <p class="starability-result" data-rating="<%= review.rating %>">
            Rated: 3 stars
          </p>
          <p>Rating: <%= review.rating %></p>
          <p>Review: <%= review.body %></p>
          <p>author: <%= review.author.username %></p>
          <% if(currentUser && review.author.equals(currentUser._id)) { %>
          <form action="/campgrounds/<%= campground._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
            <button class="button-24" role="button">삭제하기</button>
          </form>
          <% } %>
        </div>
      <% } %>
    <% } %>
    </div>
  </div>
</div>

<div id="map" style="width: 400px; height: 300px;"></div>


<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const campground = <%- JSON.stringify(campground)%>;
</script>

<script src="/js/showPageMap.js"></script>



