<% layout('layouts/common.ejs') %>


<link rel="stylesheet" href="/css/new.css">
<script defer src="/js/new.js"></script>

<div class="editPage">
  <div class="edit__form">
    <form class="form__edit" action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

      <div class="filebox">
        <input class="upload-name" value="첨부파일" placeholder="첨부파일" readonly>
        <label class="filename" for="file">파일찾기</label> 
        <input class="form__file" type="file" name="image" id="file" multiple>
      </div>
      
      <div class="input__underline"></div>
      <input type="text" name="campground[title]" value="<%= campground.title %>">
      <div class="input__underline"></div>
      <input type="text" name="campground[location]" value="<%= campground.location %>">
      <div class="input__underline"></div>
      <input type="text" name="campground[price]" value="<%= campground.price %>">
      <div class="input__underline"></div>
      <textarea name="campground[description]" id="description" cols="10" rows="10"></textarea>
      <div class="form__deleteImg">
        <% campground.images.forEach(function(img, i) { %>
          <img src="<%= img.url %>" class="deleteImg__img" alt="#">
          <div class="deleteImg__checkbox">
            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
          </div>
          <label for="image-<%=i%>">DELETE</label>
        <% }) %>
      </div>
      <div>
        <button class="button-25" role="button">수정</button>
      </div>
    </form>
  </div>
</div>
